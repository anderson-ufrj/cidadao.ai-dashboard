# Production Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=https://cidadao-api-production.up.railway.app
NEXT_PUBLIC_APP_URL=https://cidadao-dashboard.vercel.app

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_WEBSOCKET=false
NEXT_PUBLIC_ENABLE_REAL_API=true

# Cache Configuration
NEXT_PUBLIC_CACHE_TTL=5000
NEXT_PUBLIC_REFRESH_INTERVAL=5000

# Optional: Database Configuration (if needed)
# DATABASE_URL=postgresql://user:password@host:port/database
# REDIS_URL=redis://localhost:6379

# Optional: Analytics
# NEXT_PUBLIC_GA_ID=UA-XXXXXXXX-X
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Security
NEXT_PUBLIC_ENABLE_CORS=true
NEXT_PUBLIC_ENABLE_RATE_LIMITING=true

# Development/Debug (set to false in production)
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_USE_MOCK_DATA=false